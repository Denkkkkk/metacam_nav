<!-- 主文件,整合所有模块 -->
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="robot">
    <gravity>true</gravity>
    <xacro:include filename="property.xacro" />
    <xacro:include filename="car_base.urdf.xacro" />
    <xacro:include filename="velodyne.urdf.xacro" />
    <xacro:include filename="camera.urdf.xacro" />
    <!-- <xacro:include filename="laser.urdf.xacro" /> -->
    <joint name="${ns}camera2base_link" type="fixed">
        <parent link="${ns}vehicle" />
        <child link="${ns}camera" />
        <origin xyz="0.2 0 0.12" rpy="0 0 0" />
        <axis xyz="0 0 0" />
    </joint>

    <xacro:VLP-16 parent="vehicle" name="velodyne" topic="/velodyne_points" hz="10"
        min_range="0.4" samples="350" collision_range="0.5" organize_cloud="true" gpu="false"
        min_angle="0" max_angle="3.14159" vmin_angle="${-7/180*PI}" vmax_angle="${52/180*PI}">
        <origin xyz="0.0 0.2 ${car_height/2+0.02}" rpy="0 0 0" />
    </xacro:VLP-16>
    <xacro:VLP-16 parent="vehicle" name="velodyne2" topic="/velodyne_points2" hz="10"
        min_range="0.4" samples="350" collision_range="0.5" organize_cloud="true" gpu="false"
        min_angle="-3.14159" max_angle="0" vmin_angle="${-7/180*PI}" vmax_angle="${52/180*PI}">
        <origin xyz="0.0 -0.2 ${car_height/2+0.02}" rpy="0 0 0" />
    </xacro:VLP-16>

    <xacro:include
        filename="$(find sentry_gazebo)/urdf/car_drive.gazebo" />
    <xacro:base_mecanum_gazebo />
</robot>